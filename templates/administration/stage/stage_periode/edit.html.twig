{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.stage_periode.modification.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        {{ include('composants/adm-buttons-edit.html.twig', {elt:'stage_periode', id: stage_periode.id}) }}
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.stage_periode.modification.heading'|trans }}</h4>
        <div class="card-body">

            {% form_theme form 'form/my-form.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-success">{{ button_label|default('label.update'|trans) }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascript %}
  $('.selector-stagePeriodeSoutenances').collection();
  $('.selector-stagePeriodeInterruptions').collection();
{% endblock %}