{% extends 'base.html.twig' %}

{% block title %}StageEtudiant index{% endblock %}

{% block body %}
    <h1>StageEtudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created</th>
                <th>Updated</th>
                <th>ServiceStageEntreprise</th>
                <th>SujetStage</th>
                <th>DateDepotFormulaire</th>
                <th>DateValidation</th>
                <th>DateConventionEnvoyee</th>
                <th>DateConventionRecu</th>
                <th>EtatStage</th>
                <th>DateDebutStage</th>
                <th>DateFinStage</th>
                <th>Activites</th>
                <th>AmenagementStage</th>
                <th>Gratification</th>
                <th>GratificationMontant</th>
                <th>GratificationPeriode</th>
                <th>Avantages</th>
                <th>DureeHebdomadaire</th>
                <th>DureeJoursStage</th>
                <th>actions</th>
            </tr>
