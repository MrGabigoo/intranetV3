{% extends 'base.html.twig' %}

{% block header %}
    {{ 'administration.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('default_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour_dashboard'|trans }}"><i
                        class="material-icons">dashboard</i></a>
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.etudiants'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        {% for semestre in user_data.semestres %}
                            <div class="col-md-2"><a
                                        href="{{ path('administration_semestre_index', {semestre:semestre.id}) }}"
                                        class="btn btn-block btn-primary">
                                    {{ semestre.libelle }}
                                </a></div>
                        {% endfor %}
                    </div>
                    <div class="row gap-y">
                        <div class="col-sm-4">
                            <div><a href="{{ path('administration_etudiant_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.tous.les.etudiants'|trans }}</a></div>
                        </div>
                        <div class="col-sm-4">
                            <div><a href="{{ path('administration_statistique_index') }}"
                                    class="btn btn-block btn-primary">
                                    {{ 'adm.statistiques'|trans }}</a></div>
                        </div>
                        <div class="col-sm-4">
                            <div><a href="{{ path('administration_cohorte_index') }}" class="btn btn-block btn-primary">
                                    {{ 'adm.cohortes'|trans }}</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.personnels'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12"><a href="{{ path('administration_personnel_index') }}"
                                                  class="btn btn-block btn-primary"> {{ 'adm.permanents.et.vacataires'|trans }}
                            </a></div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-6">
                            <div><a href="{{ path('administration_previsionnel_index') }}"
                                    class="btn btn-block btn-primary">
                                    {{ 'adm.previsionnels'|trans }}</a></div>
                        </div>
                        <div class="col-md-6">
                            <div><a href="{{ path('administration_hrs_index') }}" class="btn btn-block btn-primary">
                                    {{ 'adm.hrs.primes'|trans }}</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.ppn'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <div><a href="{{ path('administration_matiere_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.programme.pedagogique'|trans }}</a></div>
                        </div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <div><a href="{{ path('administration_groupe_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.type.groupes'|trans }}</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.competences'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <div><a href="{{ path('administration_competence_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.gerer.les.competences'|trans }}</a></div>
                        </div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <div><a href=""
                                    class="btn btn-block btn-primary"> {{ 'adm.analyser.competences'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.edt'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <div><a href="{{ path('administration_edt_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.gerer.edt'|trans }}</a></div>
                        </div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <div><a href="{{ path('administration_date_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.gerer.dates'|trans }}</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if user_data.formation.optStage %}
            <div class="col-md-8 col-lg-8">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title">{{ 'adm.stages'|trans }}</h4>
                        <div class="card-header-actions" style="">
                            <a href="{{ path('administration_stage_periode_index') }}" class="btn btn-sm btn-info"
                               title="Créer une période" data-provide="tooltip"> <i class="ti-plus"></i> </a>
                        </div>
                    </header>
                    <div class="card-body">
                        <div class="row gap-y">
                            {% for periode in periodes %}
                                <div class="col-md-6">
                                    <div>
                                        <a href="{{ path('administration_stage_periode_gestion', {uuid:periode.uuidString}) }}"
                                           class="btn btn-block btn-primary"> Période {{ periode.libelle }}</a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-sm-12">
                                    <div class="alert alert-info">Aucune période de stage.</div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.alternances'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        {% set alternance = false %}
                        {% for annee in user_data.annees if annee.optAlternance == true %}
                            {% set alternance = true %}
                            <a href="{{ path('administration_alternance_index',{annee:annee.id}) }}"
                               class="btn btn-block btn-primary"> Alternances pour l'année {{ annee.libelle }}</a>
                        {% endfor %}
                        {% if alternance == false %}
                            <div class="alert alert-info">Aucune année n'est proposée en alternance</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.documents'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_document_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.gerer.les.documents'|trans }}</a></div>

                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_type_document_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.gerer.les.categories.de.document'|trans }}</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.articles'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_article_new') }}"
                                                  class="btn btn-block btn-primary"> {{ 'adm.ajouter.articles'|trans }}
                            </a></div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_article_index') }}"
                                                  class="btn btn-block btn-primary"> {{ 'adm.gerer.articles'|trans }}
                            </a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.actualites.bornes'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_actualite_index') }}"
                                                  class="btn btn-block btn-primary"> {{ 'adm.gerer.actualites'|trans }}
                            </a></div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_borne_index') }}"
                                                  class="btn btn-block btn-primary"> {{ 'adm.gerer.bornes'|trans }}
                            </a></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.structure.formation'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_structure_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.structure'|trans }}</a>
                        </div>
                    </div>
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_configuration') }}" class="btn btn-block btn-primary">
                                    {{ 'adm.configuration'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="card"><h4 class="card-title"><strong>{{ 'adm.parametres.formation'|trans }}</strong></h4>
                <div class="card-body">
                    <div class="row gap-y">
                        <div class="col-md-12">
                            <a href="{{ path('administration_salle_examen_index') }}"
                                    class="btn btn-block btn-primary"> {{ 'adm.salle_examens'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}