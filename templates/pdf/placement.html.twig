{% extends 'pdf/basepdf.html.twig' %}

{% block content %}
    {% for groupe in groupes %}
        {{ include('pdf/composants/entete-placement.html.twig') }}

        <h3>Groupe : {{ groupe.libelle }}</h3>
        <p>Nombre d'étudiants : {{ groupe.etudiants|length }}</p>
        <table style="clear:both;width:100%" class="table">
            <thead>
            <tr>
                <th>N°</th>
                <th>Nom - Prénom</th>
                <th>Place</th>
                <th>Signature</th>
                <th>Note</th>
                <th>Retour copie</th>
            </tr>
            </thead>
            {% for etu in groupe.etudiants %}
                <tr>
                    <td>{{ etu.numetudiant }}</td>
                    <td>{{ etu.display }}</td>
                    <td style="text-align:center">{{ tabplace.etudiant[etu.id] }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor %}
        </table>
        {% if not loop.last %}
            <div style="page-break-after: always"></div>
        {% endif %}
    {% endfor %}

    {# affichage par placement#}
    {% for lettre in 1..salle.nbcol %}
        {{ include('pdf/composants/entete-placement.html.twig') }}

        <h3>Feuille d'émargement</h3>
        <table style="clear:both;width:100%" class="table">
            <thead>
            <tr>
                <th>Place</th>
                <th>N°</th>
                <th>Nom - Prénom</th>
                <th>Groupe</th>
                <th>Signature</th>
                <th>Note</th>
                <th>Retour copie</th>
            </tr>
            </thead>
        {% for key, t in tabplace.place if key|slice(0,1) == chr(lettre+64) %}
            <tr style="height: 20px;">
                <td style="text-align:center">{{ key }}</td>
                <td>{{ t.numetudiant }}</td>
                <td>{{ t.display }}</td>
                <td>{% for g in t.groupes if g.typegroupe.typegroupe == typeg %}{{ g.libelle }}{% endfor %}</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        {% endfor %}
        </table>
        {% if not loop.last %}
            <div style="page-break-after: always"></div>
        {% endif %}
    {% endfor %}

