{% extends "pdf/basepdf.html.twig" %}

{% block content %}
    <table style="width: 100%; border:0;">
        <tr>
            <td style="text-align: center; width:20%"><img
                        src="{{ linuxpath~'logo/'~user_data.formation.logoName }}" alt="logo"
                        height="70px"/></td>
            <td style="text-align: center; width:60%"><h1>{{ formation.libelle }}</h1>

                <h2>Structure de la formation</h2>
            </td>
            <td style="text-align: center; width:20%"><img
                        src="{{ linuxpath~'logo/' }}{{ constant('App\\Entity\\Constantes::LOGO_IUT') }}"
                        alt="logo"
                        height="70px"/></td>
        </tr>
    </table>

    <br>
    <table class="table" style="width:100%">
        <tr class="active">
            <td colspan="6">{{ formation.libelle }}</td>
        </tr>
        {% for diplome in formation.diplomes %}
            <tr>
                <td>&nbsp;</td>
                <td colspan="5" class="success">{{ diplome.typeDiplome.libelle }} {{ diplome.libelle }} | {{ diplome.codeApogee }}
                    | {{ diplome.codeVersion }}</td>
            </tr>
            {% for annee in diplome.annees %}
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td colspan="4" class="info">{{ annee.libelle }} | {{ annee.codeApogee }}
                        | {{ annee.codeVersion }}</td>
                </tr>
                {% for semestre in annee.semestres %}

                    <tr>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td colspan="3">{{ semestre.libelle }} | {{ semestre.codeApogee }}
                            | {{ semestre.codeVersion }}</td>

                    </tr>
                    {% for ue in semestre.ues %}

                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td colspan="2">{{ ue.numeroUe }} | {{ ue.libelle }} | {{ ue.codeApogee }}
                                | {{ ue.codeVersion }}</td>
                        </tr>
                        {% for matiere in ue.matieres %}

                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>{{ matiere.codeMatiere }} | {{ matiere.libelle }} | {{ matiere.codeApogee }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}

                    {# options #}
                    {#{% for opt in t.options if opt.semestre==semestre %}#}

                    {#<tr class="UE_{{ semestre.id }} deroulant" >#}
                    {#<td>&nbsp;</td>#}
                    {#<td>&nbsp;</td>#}
                    {#<td>&nbsp;</td>#}
                    {#<td>&nbsp;</td>#}
                    {#<td colspan="2">{{ opt.nomoption }}</td>#}

                    {#</tr>#}
                    {#{% endfor %}#}
                {% endfor %}
            {% endfor %}
        {% endfor %}
    </table>
{% endblock %}
