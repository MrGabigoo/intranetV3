<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <style>

        body
        {
            font-family: "DejaVu Sans", serif;
            font-size:12px;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }

        .table
        {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .table td
        {
            border: 1px solid black;
        }

        .table tr
        {
            border: 1px solid black;
        }

        .table th
        {
            font-weight: bold;
            border: 1px solid black;
        }

        .tableentete
        {
            width: 100%;
            border:0;
        }
        h4
        {
            text-align: center;
        }

        #table-edt
        {
            border-collapse: collapse;
            width:100%;
        }

        #table-edt td, #table-edt th
        {
            border:1px solid darkgray;
        }

        #table-edt th
        {
            font-weight: bold;
        }

        .center
        {
            text-align: center;
        }

        .commentaire
        {
            border: none;
            margin-top: 25px;
            border-bottom: dotted 1px;
        }

        footer {
            bottom:0;
            position: fixed;
            border-top: 1px solid black;
        }


        .footer-right{
            position:fixed;
            bottom:0;
            right:0;
            width: 40%;
            text-align: right;
        }

        .footer-left{
            position:fixed;
            bottom:0;
            left:0;
            width: 40%;
        }


        footer .pagenum:before {
            content: counter(page);
        }

        {% block style %}
        {% endblock %}
    </style>

    <title>{% block title %}{% endblock %} - Intranet {{ user_data.formation.libelle }}</title>
</head>

<body>
{#<footer>
    <div class="footer-left"> {{ connect.formation.nomFormation }} | le {{ "now"|date('d/m/Y') }}</div>
    <div class="footer-right">Page <span class="pagenum"></span></div>
</footer>#}
<!--Conteneur principal -->
<div class="container-fluid" id="content">
    {% block content %}

    {% endblock %}
</div><!-- fin conteneur principal-->

</body>
</html>

