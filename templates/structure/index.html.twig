{% extends is_granted('ROLE_SUPER_ADMIN') ? 'base-super_admin.html.twig' : 'base.html.twig' %}

{% if is_granted('ROLE_SUPER_ADMIN') %}
    {% set baseurl = 'sa' %}
{% else %}
    {% set baseurl = 'administration_structure' %}
{% endif %}

{% block header %}
    {{ 'structure.de.la.formation.heading'|trans({ '%formation%': formation.libelle}) }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="{{ path('super_admin_homepage') }}" class="btn btn-primary btn-float" data-provide="tooltip"
                   data-placement="bottom" title="{{ 'atitle.retour_super_administration'|trans }}"><i
                            class="material-icons">dashboard</i></a>
            {% else %}
                <a href="{{ path('administration_index') }}" class="btn btn-primary btn-float" data-provide="tooltip"
                   data-placement="bottom" title="{{ 'atitle.retour_administration'|trans }}"><i class="material-icons">build</i></a>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'structure.de.la.formation.heading'|trans({ '%formation%': formation.libelle}) }}</h4>
        <div class="card-body">

            <div class="row gap-y ">
                <div class="col-md-10">{{ formation.libelle }}</div>
                <div class="col-md-2">
                    <a href="{{ path(baseurl ~ '_formation_show', {'id': formation.id}) }}"
                       class="btn btn-info btn-outline btn-square btn-xs" data-provide="tooltip"
                       data-placement="bottom" title="{{ 'atitle.details'|trans }}"><i class="ti-eye"></i></a>

                    <a href="{{ path(baseurl ~ '_formation_edit', {'id': formation.id}) }}"
                       class="btn btn-warning btn-outline btn-square btn-xs"><i class="ti-pencil"
                                                                                data-provide="tooltip"
                                                                                data-placement="bottom"
                                                                                title="{{ 'atitle.modifier'|trans }}"></i></a>
                </div>
            </div>
            {% for diplome in formation.diplomes %}
                <div class="row gap-y lignehover">
                    <div class="col-md-1">&nbsp;</div>
                    <div class="col-md-9">{{ diplome.typediplome.sigle }}
                        | {{ diplome.libelle }} | {{ diplome.codeApogee }}</div>
                    <div class="col-md-2">
                        <a href="{{ path(baseurl ~ '_diplome_duplicate', {'id': diplome.id}) }}"
                           class="btn btn-success btn-outline btn-square btn-xs" data-provide="tooltip"
                           data-placement="bottom" title="{{ 'atitle.dupliquer'|trans }}"><i class="ti-layers"></i></a>
                        <a href="{{ path(baseurl ~ '_diplome_show', {'id': diplome.id}) }}"
                           class="btn btn-info btn-outline btn-square btn-xs" data-provide="tooltip"
                           data-placement="bottom" title="{{ 'atitle.details'|trans }}"><i class="ti-eye"></i></a>

                        <a href="{{ path(baseurl ~ '_diplome_edit', {'id': diplome.id}) }}"
                           class="btn btn-warning btn-outline btn-square btn-xs"><i class="ti-pencil"
                                                                                    data-provide="tooltip"
                                                                                    data-placement="bottom"
                                                                                    title="{{ 'atitle.modifier'|trans }}"></i></a>
                        <a href="{{ path(baseurl ~ '_diplome_delete', {id: diplome.id}) }}"
                           data-csrf="{{ csrf_token('delete' ~ diplome.id) }}"
                           class="btn btn-danger btn-outline btn-square btn-xs supprimer" data-id="id"><i
                                    class="ti-close" data-provide="tooltip" data-placement="bottom"
                                    title="{{ 'atitle.supprimer'|trans }}"></i></a>
                    </div>
                </div>
                {% for annee in diplome.annees %}
                    <div class="row gap-y dip_{{ diplome.id }} lignehover">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">{{ annee.libelle }} | {{ annee.codeApogee }}</div>
                        <div class="col-md-2">
                            <a href="{{ path(baseurl ~ '_annee_duplicate', {'id': annee.id}) }}"
                               class="btn btn-success btn-outline btn-square btn-xs" data-provide="tooltip"
                               data-placement="bottom" title="{{ 'atitle.dupliquer'|trans }}"><i class="ti-layers"></i></a>
                            <a href="{{ path(baseurl ~ '_annee_show', {'id': annee.id}) }}"
                               class="btn btn-info btn-outline btn-square btn-xs" data-provide="tooltip"
                               data-placement="bottom" title="{{ 'atitle.details'|trans }}"><i class="ti-eye"></i></a>

                            <a href="{{ path(baseurl ~ '_annee_edit', {'id': annee.id}) }}"
                               class="btn btn-warning btn-outline btn-square btn-xs"><i class="ti-pencil"
                                                                                        data-provide="tooltip"
                                                                                        data-placement="bottom"
                                                                                        title="{{ 'atitle.modifier'|trans }}"></i></a>
                            <a href="{{ path(baseurl ~ '_annee_delete', {id: annee.id}) }}"
                               data-csrf="{{ csrf_token('delete' ~ annee.id) }}"
                               class="btn btn-danger btn-outline btn-square btn-xs supprimer" data-id="id"><i
                                        class="ti-close" data-provide="tooltip" data-placement="bottom"
                                        title="{{ 'atitle.supprimer'|trans }}"></i></a>
                        </div>
                    </div>
                    {% for semestre in annee.semestres %}

